<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Infosys" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Infosys.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Infosys.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Infosys.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:layout_marginTop">@dimen/item_bottom_margin_4</item>
        <item name="android:layout_marginLeft">@dimen/item_left_margin </item>
        <item name="android:layout_marginStart">@dimen/item_left_margin</item>
    </style>
    <style name="TextViewStyle.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/item_right_margin_20</item>
        <item name="android:layout_marginEnd">@dimen/item_right_margin_20</item>
        <item name="android:textColor">@color/purple_700</item>
    </style>

    <style name="TextViewStyle.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_width">@dimen/item_image_width_250</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="Image" parent="android:Theme">
        <item name="android:layout_width">@dimen/item_image_width</item>
        <item name="android:layout_height">@dimen/item_image_width</item>
        <item name="android:layout_marginLeft">@dimen/item_left_margin </item>
        <item name="android:layout_marginStart">@dimen/item_left_margin</item>
        <item name="android:layout_marginBottom">@dimen/item_bottom_margin_8</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="ArrowImage" parent="android:Theme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/item_bottom_margin_2 </item>
        <item name="android:layout_marginStart">@dimen/item_bottom_margin_2</item>
        <item name="android:layout_marginBottom">@dimen/item_bottom_margin_8</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="AppBar" parent="android:Theme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>
    <style name="AppBar.View">
        <item name="android:layout_marginBottom">@dimen/item_bottom_margin</item>
    </style>
    <style name="Progressbar" parent="android:Theme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>
    <style name="Progressbar.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="LayoutItem" parent="android:Theme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
</resources>